{{!
    @template core/custom_menu_item

    This template renders a node as part of a submenu.

    Example context (json):
    {
        "divider": "",
        "haschildren": "1",
        "uniqid": "Unique string",
        "text": "Moodle community",
        "children": "[custom_menu_item object]",
        "title": "Moodle community",
        "url": "https://moodle.org"
    }
}}
<ul class="nav">
    {{#menuitems}}
        {{#haschildren}}
            <li class="dropdown nav-item mega-dropdown">
                <a class="dropdown-toggle nav-link primary" id="drop-down-{{uniqid}}"
                   aria-haspopup="true"
                   aria-expanded="false" href="#"
                   {{#title}}title="{{{title}}}"{{/title}} aria-controls="drop-down-menu-{{uniqid}}">
                    {{{text}}}
                </a>
                <div class="dropdown-menu primary" role="menu" id="drop-down-menu-{{uniqid}}"
                     aria-labelledby="drop-down-{{uniqid}}">
                    <ul class="nav">
                        {{#children}}
                            {{#haschildren}}
                                <li class="dropdown nav-item submega-dropdown">
                                    <a class="dropdown-toggle nav-link secondary" id="drop-down-{{key}}"
                                       aria-haspopup="true" aria-expanded="false" href="#"
                                       {{#title}}title="{{{title}}}"{{/title}} aria-controls="drop-down-menu-{{key}}">
                                        {{#pix}} i/folder, core {{/pix}} {{text}}
                                    </a>
                                </li>
                            {{/haschildren}}
                        {{/children}}
                    </ul>
                </div>
                {{#children}}
                    {{#haschildren}}
                        <div class="dropdown-menu subitem" role="menu" id="drop-down-menu-{{key}}"
                             aria-labelledby="drop-down-{{key}}">
                            {{#children}}
                                <a href="{{{url}}}" class="dropdown-item nav-link"
                                   {{#title}}title="{{{title}}}"{{/title}}>{{text}}</a>
                            {{/children}}
                        </div>
                    {{/haschildren}}
                {{/children}}
            </li>
        {{/haschildren}}
        {{^haschildren}}
            <li class="nav-item">
                <a href="{{{url}}}" class="nav-item nav-link" {{#title}}title="{{title}}"{{/title}}>{{{text}}}</a>
            </li>
        {{/haschildren}}
    {{/menuitems}}
</ul>
